type Book{
  id: Int
  title: String!
  author: Person!
}

type Person{
  id: Int!
  nama: String!
  hp: String
  umur: Int!
  password: String!
}

type Query{
  books: [Book!]!
  booksByID(id: Int!): Book
  persons: [Person!]!
}

input NewPerson{
  nama: String!
  hp: String
  umur: Int!
  password: String!
}

input NewBook{
  title: String!
  author: Int!
}

type Mutation{
  addPerson(input: NewPerson!):Person!
  addBook(input: NewBook!):Book!
}

